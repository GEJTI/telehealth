<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical">
    <TextView
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15sp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checkup Details"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Checkup: "/>
        <TextView
            android:textSize="15sp"
            android:id="@+id/txt_date_of_checkup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01-23-2021"/>
    </LinearLayout>
    <TextView
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Information"/>
    <TextView
        android:id="@+id/txt_patient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: Patient One"
        />
    <TextView
        android:id="@+id/txt_patient_bday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birthday: 01-12-2021"
        />
    <TextView
        android:id="@+id/txt_patient_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender: Male"
        />
    <TextView
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medical Condition or Problem"/>
    <TextView
        android:id="@+id/txt_condition"
        android:layout_marginTop="5dp"
        android:text="@string/neurologist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginBottom="5dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="end"
        android:textStyle="bold"
        android:text="Close"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_close"/>
</LinearLayout>