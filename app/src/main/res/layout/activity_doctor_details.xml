<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.telehealth.DoctorDetailsActivity">

    <include layout="@layout/app_bar_layout" android:id="@+id/main_page_toolbar" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="203dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/down_bg">




    </FrameLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_200"
        android:layout_margin="30dp"

        android:padding="25dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/doctor_details_profile_image"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/loading_placeholder"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/doctor_details_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="Mr Doctor"
            android:textAlignment="center"
            android:textColor="@color/purple_700"/>

        <TextView
            android:id="@+id/doctor_details_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="normal"
            android:text="Ctg"
            android:textAlignment="center"
            android:textColor="@color/purple_700"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="normal"
            android:text="Date of License Validity"
            android:textAlignment="center"
            android:textColor="@color/white"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/doctor_license"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="normal"
            android:text="12/01/2010 - 12/12/1997"
            android:textAlignment="center"
            android:textColor="@color/white"/>


        <Button
            android:layout_marginTop="18.7dp"
            android:layout_gravity="center"
            android:id="@+id/show_doctor_license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEE LICENSE"
            app:icon="@drawable/ic_license"
            style="@style/Widget.MaterialComponents.Button.Icon"
            />

        <Button
            android:layout_gravity="center"
            android:id="@+id/show_feedbacks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEE FEEDBACKS"
            app:icon="@drawable/ic_feedback"
            style="@style/Widget.MaterialComponents.Button.Icon"
            />

<!--        <com.example.telehealth.customfonts.MyTextView_Poppins_Bold-->
<!--            android:id="@+id/show_doctor_license"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_marginTop="18.7dp"-->
<!--            android:background="@drawable/button"-->
<!--            android:gravity="center"-->
<!--            android:paddingRight="20dp"-->
<!--            android:paddingLeft="20dp"-->
<!--            android:paddingTop="14dp"-->
<!--            android:paddingBottom="14dp"-->
<!--            android:layout_marginBottom="10dp"-->
<!--            android:text="See doctor license"-->
<!--            android:textColor="#ffffff"-->
<!--            android:textSize="15sp" />-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/purple_700">

            <ImageView
                android:id="@+id/doctor_details_message"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:src="@drawable/ic_message_black_24dp"
                app:tint="@color/teal_200" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
